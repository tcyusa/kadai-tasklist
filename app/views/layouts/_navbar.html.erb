<header class="mb-4">
    <nav class="navbar navbar-expand-sm">
        <a class="navbar-brand" href="/">TaskList</a>
        <div id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto"></ul>
            <% if logged_in? %>
                <ul class="navbar-nav">
                    <li class="nav-item"> <%= current_user.name %> </li>
                    <li class="nav-item"><%= link_to 'Logout', logout_path, method: :delete %></li>
                </ul>
            <% else %>
                <ul class="navbar-nav">
                    <li class="nav-item"><%= link_to 'Signup', signup_path, class: 'nav-link' %></li>
                    <li class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link' %></li>
                </ul>
            <% end %>
        </div>
    </nav>
</header>