<% if logged_in? %>
    <h1> Tasklist</h1>
    <div>
        <ul>
            <% @tasks.each do |task| %>
                <li><%= link_to task.content, task %> &gt; <%= task.status %></li>
            <% end %>
        </ul>
        <%= link_to '新規タスクの作成', new_task_path %>
    </div>
<% else %>
    <div class="text-center">
        <h1>Toppages</h1>
        <%= link_to 'Sign up', signup_path %>    
    </div>
<% end %>